<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/index/new">Add new Campground</a>
                </p>
                <p>
                    <form action="/index" method="GET" class="form-inline">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Campground search..." class="form-control">
                            <input type="submit" value="Search" class="btn btn-default">
                        </div>
                    </form>
                </p>
            </div>
        </header>
        <section class="bcgWhite">
            <div class="row text-center" style="display: flex; flex-wrap: wrap;">
                <% for(var i = 0; i < campgrounds.length; i++) { %>
                    <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                            <img class="img-responsive" src="<%= campgrounds[i].image %>">
                            <div class="caption">
                                <h4><%= campgrounds[i].name %></h4>
                            </div>
                            <p>
                                <a href="/index/<%= campgrounds[i]._id %>" class="btn btn-primary"><i class="fa fa-search-plus" aria-hidden="true"></i> More Info</a>
                            </p>
                        </div>
                    </div>
                    <% } %>
            </div>
    </div>
    </section>
    <% include ../partials/footer %>
